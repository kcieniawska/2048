<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="8dp">

    <!-- Tytuł gry -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2048"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp"/>

    <!-- Aktualny wynik -->
    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wynik: 0"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp"/>

    <!-- Plansza gry -->
    <com.example.a2048.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"/>

    <!-- Kontener Easter Egga -->
    <LinearLayout
        android:id="@+id/easterEggContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone"
        android:padding="16dp">

        <TextView
            android:id="@+id/hiddenText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pozdrowienia ze słonecznego Podhala :)"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/hiddenImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="250dp"
            android:maxHeight="250dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:src="@drawable/easter_egg_image"
            android:contentDescription="Ukryte zdjęcie"/>
    </LinearLayout>

    <!-- Kontener na zakładki -->
    <FrameLayout
        android:id="@+id/tabContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <!-- Layout wyników -->
        <LinearLayout
            android:id="@+id/layoutScores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvNoScores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brak wyników"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:gravity="center"
                android:visibility="gone"
                android:padding="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvScores"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:clipToPadding="false"/>
        </LinearLayout>

        <!-- Layout autora -->
        <LinearLayout
            android:id="@+id/layoutAuthor"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wersja 1.2"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:paddingBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ostatnia aktualizacja: 17.10.2025"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autor: Karolina Cieniawska | 14690"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aplikacja wykonana na przedmiot &quot;Aplikacje mobilne&quot; na Akademię Nauk Stosowanych w Nowym Targu"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:paddingBottom="16dp"/>

            <!-- Przycisk listy zmian -->
            <Button
                android:id="@+id/btnChangelog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Co nowego w aplikacji?"
                android:backgroundTint="#555555"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp"/>

            <!-- ScrollView z changelogiem -->
            <ScrollView
    android:id="@+id/scrollChangelog"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:visibility="gone"
    android:fillViewport="true"
    android:scrollbars="vertical"
    android:layout_marginTop="4dp">

    <TextView
        android:id="@+id/tvChangelog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:padding="8dp"/>
</ScrollView>

        </LinearLayout>

    </FrameLayout>

    <!-- Przycisk restartu -->
    <Button
        android:id="@+id/btnRestart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#D84315"
        android:padding="12dp"
        android:text="Zacznij od nowa"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"/>

    <!-- Zakładki -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@android:color/white"
        app:tabSelectedTextColor="@android:color/white"
        app:tabTextColor="#AAAAAA"
        android:layout_marginTop="8dp"/>
</LinearLayout>
